{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "bundler", // Or "node" depending on your preference and tooling
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".", // Important for absolute imports
        "paths": {
            "@/*": [
                "./resources/js/*"
            ] // Example alias
        }
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "vendor"
    ]
}
